{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    
<section class="vh-50">
		<div class="container py-5 h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col-12 col-md-8 col-lg-6 col-xl-5">
					<div class="card bg-dark text-white" style="border-radius: 1rem;">
						<div class="card-body p-5 text-center">

							<form action="{{ path('app_login') }}" method="post">

								<div class="mb-md-5 mt-md-4 pb-5">

									<h2 class="fw-bold mb-2 text-uppercase">Iniciar Sesión<i class="material-icons">&#xea77;</i>
									</h2>
									<p class="text-white-50 mb-5">Por favor, introduce tu correo y contraseña.</p>

									<div class="form-outline form-white mb-4">
										<label for="inputEmail">Email</label>
                                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
									</div>

									<div class="form-outline form-white mb-4">

										<label for="inputPassword">Contraseña</label>
                                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
									</div>
									
                                    <input type="hidden" name="_csrf_token"
                                    value="{{ csrf_token('authenticate') }}">
									<a href="{{ path('app_forgot_password_request') }}">¿Olvidaste tu contraseña?</a>
                                    <div class="checkbox mb-3 mt-3">
                                        <label>
                                            <input type="checkbox" name="_remember_me"> Recuerdame
                                        </label>
                                    </div>
                                    <div>
										<p> ¿Aún no estas registrado? </p>
										<a href="{{ path('app_register') }}">Registrate</a>
									</div>
									<button class="btn btn-outline-light btn-lg px-5 mt-5" type="submit">Iniciar sesión</button>
                                    
								</div>

							</form>
                            
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
