{% extends 'base.html.twig' %}

{% block title %}Artistas{% endblock %}

{% block body %}
<div class="example-wrapper">
<h1><b>Artista</b></h1>	
    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artista.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ artista.nombre }}</td>
            </tr>
            <tr>
                <th>GeneroMusical</th>
                <td>{{ artista.generoMusical }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ artista.descripcion }}</td>
            </tr>
            <tr>
                <th>Notas</th>
                <td>{{ artista.notas }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_artistas_index') }}" class="btn btn-warning">Volver<i class="material-icons">&#xe5c4;</i></a>

    <a href="{{ path('app_artistas_edit', {'id': artista.id}) }}" class="btn btn-success" ><i class="material-icons">&#xE254;</i>Guardar</a>

    {{ include('artistas/_delete_form.html.twig') }}
</div>

{% endblock %}
