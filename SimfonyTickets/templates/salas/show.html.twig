{% extends 'base.html.twig' %}

{% block title %}Salas{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Salas</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sala.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ sala.nombre }}</td>
            </tr>
            <tr>
                <th>Capacidad</th>
                <td>{{ sala.capacidad }}</td>
            </tr>
        </tbody>
    </table>
<div class="d-flex justify-content-between">
    <a href="{{ path('app_salas_index') }}"class="btn btn-warning">Volver<i class="material-icons">&#xe5c4;</i></a>

    <a href="{{ path('app_salas_edit', {'id': sala.id}) }}"class="btn btn-success" ><i class="material-icons">&#xE254;</i>Editar</a>

    {{ include('salas/_delete_form.html.twig') }}
</div>
</div>

{% endblock %}
