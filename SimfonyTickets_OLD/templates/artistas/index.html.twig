<body>
<div class="container-xl">
	<div class="table-responsive">
		<div class="table-wrapper">
			<div class="table-title">
				<div class="row">
					<div class="col-sm-6">
						<h2>Lista de <b>Artistas</b></h2>
					</div>
					<div class="col-sm-6">
                        <a href="{{ path('app_artistas_new') }}" class="btn btn-success"><i class="material-icons">&#xE147;</i> <span>Nuevo</span></a>						
					</div>
				</div>
			</div>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Id</th>
                        <th>Nombre</th>
                        <th>GeneroMusical</th>
                        <th>Descripcion</th>
                        <th>Notas</th>
                        <th>actions</th>
					</tr>
				</thead>
				<tbody>
                 {% for artista in artistas %}
					<tr>
                        <td>{{ artista.id }}</td>
                        <td>{{ artista.nombre }}</td>
                        <td>{{ artista.generoMusical }}</td>
                        <td>{{ artista.descripcion }}</td>
                        <td>{{ artista.notas }}</td>
                        <td>
                            <a href="{{ path('app_artistas_show', {'id': artista.id}) }}" ><i class="material-icons">&#xe8f4;</i></a>
                            <a href="{{ path('app_artistas_edit', {'id': artista.id}) }}" ><i class="material-icons">&#xE254;</i></a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                    <td colspan="6">no records found</td>
                    </tr>
                    {% endfor %}
                    </tbody>
					</tr>
			</table>
